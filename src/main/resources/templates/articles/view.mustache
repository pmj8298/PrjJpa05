<table class="table">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">TITLE</th>
      <th scope="col">CONTENT</th>
    </tr>
  </thead>
  <tbody>
  {{! 주석 }}
  {{! #article }}
    <tr>
      <th scope="row">{{ article.id }}</th>
      <td>{{ article.title }}</td>
      <td>{{ article.content }}</td>
    </tr>
  {{! /article }}
  </tbody>
</table>

<div class="mx-auto" style="width:80%">
<a href="/articles/List" class="btn btn-sm btn-primary" style="width:100px">목록</a>
<a href="/articles/WriteForm" class="btn btn-sm btn-secondary" style="width:100px">새 글 쓰기</a>
<a href="/articles/{{ article.id }}/EditForm" class="btn btn-sm btn-success" style="width:100px">수정</a>
<a href="/articles/{{ idx }}/Delete" class="btn btn-sm btn-danger" style="width:100px">삭제</a>
{{! id ( pathvariable )}}
</div>

